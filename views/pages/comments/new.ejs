<%- include("../../partials/header") %>


<div class="container" style="text-align: center;">
    <h1>Add a new comment about <%=campground.name%></h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto">
            <form action="/index/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Comment Text">
                </div>
                <!-- <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="Author">
                </div> -->
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>            
            </form>
            <a href="/index">Go Back</a>
        </div>

    </div>

</div>


