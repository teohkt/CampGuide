<%- include("../../partials/header") %>


<div class="container" style="text-align: center;">
    <h1>Editing <%= campground.name%></h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto">
            <form action="/index/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="newCampground[name]" value="<%= campground.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="newCampground[price]" value="<%= campground.price %>" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="newCampground[image]" value="<%= campground.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="newCampground[description]" value="<%= campground.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/index">Go Back</a>
        </div>

    </div>

</div>


<%- include("../../partials/footer") %>